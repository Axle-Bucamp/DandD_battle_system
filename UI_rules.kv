<layout_colored@GridLayout>:
    canvas.before:
        Color:
            rgba: 1, .5, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<round_label_with_border>
    opacity : 1
    canvas.before:
        Color:
            rgba: app.white_cream
        RoundedRectangle:
            pos: self.pos
            size: self.width - 5, self.height - 5
            radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

<round_box_with_border@GridLayout>
    opacity : 0.8
    canvas.before:
        Color:
            rgba: .3, .3, .3, 1
        RoundedRectangle:
            pos: self.pos
            size: self.width + 5, self.height + 5
            radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

